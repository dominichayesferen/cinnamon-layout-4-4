    updateIconList

    # need to set keys associated with panel layouts
    # NOTE: "orient" needed at end of world clock calendar (simonwiles) to NOT
    #   have a prompt for confirming if this applet should be used in vertical
    #   panel.
    gsettings set org.cinnamon app-menu-label ""
    gsettings set org.cinnamon enabled-applets "['panel1:left:1:menu@cinnamon.org:101', 'panel1:left:2:show-desktop@cinnamon.org:102', 'panel1:left:3:grouped-window-list@cinnamon.org:120', 'panel1:right:0:keyboard@cinnamon.org:124', 'panel1:right:1:notifications@cinnamon.org:119', 'panel1:right:2:removable-drives@cinnamon.org:106', 'panel1:right:3:collapsible-systray@feuerfuchs.eu:121', 'panel1:right:4:inhibit@cinnamon.org:107', 'panel1:right:5:spacer-thin@wastalinux.org:126', 'panel1:right:6:calendar@simonwiles.net:113:orient', 'panel1:right:7:spacer-thin@wastalinux.org:126', 'panel1:right:8:sound@cinnamon.org:111', 'panel1:right:9:network@cinnamon.org:110', 'panel1:right:10:power@cinnamon.org:112', 'panel1:right:11:spacer-thin@wastalinux.org:126']"
    gsettings set org.cinnamon enabled-extensions "['transparent-panels@germanfr']"
    # all "panels" items need reset since number of panels could have changed
    gsettings set org.cinnamon panel-zone-icon-sizes '[{"panelId":1,"left":0,"center":0,"right":22}]'
    gsettings set org.cinnamon panel-zone-symbolic-icon-sizes '[{"panelId":1,"left":0,"center":0,"right":16}]'
    gsettings set org.cinnamon panels-autohide "['1:false']"
    gsettings set org.cinnamon panels-enabled "['1:0:left']"
    gsettings set org.cinnamon panels-height "['1:42']"
    gsettings set org.cinnamon panels-hide-delay "['1:0']"
    gsettings set org.cinnamon panels-show-delay "['1:0']"

    gsettings set org.cinnamon.desktop.wm.preferences button-layout ':minimize,maximize,close'
;;

"gnome2")
#    # menu@cinnamon.org:
#    #   - remove any local applet and configs (will be re-created from defaults)
#    rm -rf /home/$USER/.local/share/cinnamon/applets/menu@cinnamon.org
#    rm -rf /home/$USER/.cinnamon/configs/menu@cinnamon.org

    # reset menu applet to default:
    resetMenu

#    # calendar@cinnamon.org:
#    #   - remove any local applet and configs (will be re-created from defaults)
#    rm -rf /home/$USER/.local/share/cinnamon/applets/calendar@simonwiles.net
#    rm -rf /home/$USER/.cinnamon/configs/calendar@simonwiles.net

#    # places-bookmarks@dmo60.de:
#    #   - remove any local applet and configs (will be re-created from defaults)
#    rm -rf /home/$USER/.local/share/cinnamon/applets/places-bookmarks@dmo60.de
#    rm -rf /home/$USER/.cinnamon/configs/places-bookmarks@dmo60.de

    # if SAVED_WC set worldclocks
    updateWorldClocks

    # set clock to full format (date, time)
    setClockFull

    # if SAVED_LAUNCHERS set panel-launchers
    updatePanelLaunchers

    # need to set keys associated with panel layouts
    gsettings set org.cinnamon app-menu-label "$MENU_LABEL"
    gsettings set org.cinnamon enabled-applets "['panel1:left:1:menu@cinnamon.org:101', 'panel1:left:2:places-bookmarks@dmo60.de:122', 'panel1:left:3:panel-launchers@cinnamon.org:103', 'panel1:right:0:keyboard@cinnamon.org:124', 'panel1:right:1:notifications@cinnamon.org:119', 'panel1:right:2:removable-drives@cinnamon.org:106', 'panel1:right:3:inhibit@cinnamon.org:107', 'panel1:right:4:systray@cinnamon.org:108', 'panel1:right:5:bluetooth@cinnamon.org:109', 'panel1:right:6:sound@cinnamon.org:111', 'panel1:right:7:network@cinnamon.org:110', 'panel1:right:8:power@cinnamon.org:112', 'panel1:right:9:calendar@simonwiles.net:113', 'panel1:right:10:user@cinnamon.org:116', 'panel2:left:1:show-desktop@cinnamon.org:102', 'panel2:left:2:window-list@cinnamon.org:105', 'panel2:right:1:workspace-switcher@cinnamon.org:123', 'panel2:right:2:trash@cinnamon.org:117']"
    gsettings set org.cinnamon enabled-extensions "[]"
    # all "panels" items need reset since number of panels could have changed
    gsettings set org.cinnamon panel-zone-icon-sizes '[{"panelId":1,"left":0,"center":0,"right":22},{"panelId":2,"left":0,"center":0,"right":24}]'
    gsettings set org.cinnamon panel-zone-symbolic-icon-sizes '[{"panelId":1,"left":22,"center":0,"right":16},{"panelId":2,"left":0,"center":0,"right":22}]'
    gsettings set org.cinnamon panels-autohide "['1:false', '2:false']"
    gsettings set org.cinnamon panels-enabled "['1:0:top', '2:0:bottom']"
    gsettings set org.cinnamon panels-height "['1:28', '2:28']"
    gsettings set org.cinnamon panels-hide-delay "['1:0', '2:0']"
    gsettings set org.cinnamon panels-show-delay "['1:0', '2:0']"

    gsettings set org.cinnamon.desktop.wm.preferences button-layout ':minimize,maximize,close'
;;

*)
    #do nothing
;;

esac

RETURN=$?
if [ $RETURN == 0 ];
then
    MSG+="Cinnamon-Layout user interface updated to: $CHOICE\n\n"
    echo "$CHOICE" > $CONFIG_DIR/current-cinnamon-layout.txt
else
    MSG+="Error: Cinnamon-Layout user interface not updated\n\n"
fi

sleep 1s

# ------------------------------------------------------------------------------
# Optionally run cinnamon-layout-system
# ------------------------------------------------------------------------------

# prompt for running cinnamon-layout-system
if ! [ "$AUTO" ];
then
    zenity --question --title "Cinnamon-Layout: Update System Default?" \
        --no-wrap --height=150 --width=450 \
        --window-icon=/usr/share/icons/hicolor/scalable/apps/cinnamon-layout.svg \
        --text="<b>Update Cinnamon-Layout system default to $CHOICE?</b>

<i>NOTE: you will need to provide an administrative password</i>"
    SET_DEFAULT=$?

    if [ "$SET_DEFAULT" == 0 ];
    then
        pkexec /usr/bin/cinnamon-layout-system $CHOICE
        RETURN=$?
        if [ "$RETURN" -ne 0 ];
        then
            # didn't return clean from cinnamon-layout-system: get outta here!
            exit 1
        fi
        MSG+="Cinnamon-Layout system default updated to: $CHOICE\n\n"
    else
        MSG+="Cinnamon-Layout system default not updated\n\n"
    fi
fi

# ------------------------------------------------------------------------------
# Restart Cinnamon
# ------------------------------------------------------------------------------

if [ "$XDG_SESSION_DESKTOP" == "cinnamon" ];
then
    echo
    echo "*** Restarting Cinnamon ***"
    echo
    MSG+="Restarting Cinnamon to Apply Changes\n\n"

    # restart cinnamon
    nohup cinnamon --replace &> /dev/null &

    # give a few seconds for Cinnamon to finish restarting
    sleep 3s

    echo
    echo "*** Cinnamon restarted ***"
    echo
    MSG+="Cinnamon Restarted Successfully\n\n"
else
    # cinnamon NOT active, don't attempt restart
    MSG+="Cinnamon not active so no need to restart\n\n"
fi

# ------------------------------------------------------------------------------
# Finished
# ------------------------------------------------------------------------------

MSG+="<b>Please reboot your computer if you have any trouble</b>\n\n"

echo
echo "*** output messages:"
echo "$MSG"
echo "*** cinnamon-layout finished"
echo

# prompt user
if ! [ "$AUTO" ];
then
    zenity --info --title "Cinnamon-Layout: Finished" --no-wrap --height=150 --width=450 \
        --window-icon=/usr/share/icons/hicolor/scalable/apps/cinnamon-layout.svg \
        --text="$MSG"
fi

exit 0
