    gsettings set org.cinnamon panels-enabled "['1:0:top', '2:0:left']"
    gsettings set org.cinnamon panels-height "['1:28', '2:42']"
    gsettings set org.cinnamon panels-hide-delay "['1:0', '2:0']"
